@using SellingMovieTickets.Models.Entities
@model IEnumerable<AdvModel>

<style>
    .carousel-item img {
        width: 100vw;
        height: auto;
        max-height: 100vh;
        object-fit: cover;
    }

    .slider_title {
        font-size: 36px;
        color: white;
    }

    .slider_description {
        font-size: 18px;
        color: white;
    }
</style>

@if (Model != null && Model.Any())
{
    <div id="sliderCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <button type="button" data-bs-target="#sliderCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")"></button>
            }
        </div>

        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                <div class="carousel-item @(Model.First() == item ? "active" : "")">
                    <img src="/media/advs/@item.Image" class="d-block w-100" alt="@item.Title" style="width: 100vw; height: auto; max-height: 100vh; object-fit: cover;">
                </div>
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#sliderCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#sliderCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}
